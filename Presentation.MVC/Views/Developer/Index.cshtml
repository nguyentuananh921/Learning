@model IEnumerable<Developer>

@{
    ViewData["Title"] = "Index";
}

<h1>List Developer</h1>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="developerDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>                    
                    <th>Name</th>
                    <th>Follower</th>                    
                    <th>Actions</th>
                </tr>                
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model=>item.Name) </td>
                        <td>@Html.DisplayFor(model=>item.Followers)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-area="" asp-controller="Category" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-area="" asp-controller="Category" asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                                    <i class="bi bi-info-square"></i>Details
                                </a>
                                <a asp-area="" asp-controller="Category" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@item.Id">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>

